@model WypozyczalniaAplikacjaWebowa.Pages.KategoriaF.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kategorium[0].NazwaKategorii)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
