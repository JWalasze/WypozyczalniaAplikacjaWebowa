        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazwaKategorii)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdKategorii">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdKategorii">Details</a> |
